<h1 class="visuallyhidden">CivLink Petitions</h1>

<meta http-equiv="Content-Security-Policy" content="
      default-src https://cdn.example.net; child-src 'none';
      frame-ancestors https://somedomain.com;
      object-src 'none';
      img-src 'self';
      ">

<% if Parliament.dissolved? %>
  <%= render 'pages/home/dissolved' %>
<% elsif Parliament.dissolution_announced? %>
  <%= render 'pages/home/dissolution_announced' %>
<% elsif Parliament.opened? %>
  <%= render 'pages/home/opened' %>
<% else %>
  <%= render 'pages/home/pending' %>
<% end %>
